<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgxml3"
    tools:context=".redeemDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="top|left|center_vertical|center_horizontal|center|start">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gilroy_bold"
                    android:text="Redeem Added"
                    android:textColor="@color/black"
                    android:textFontWeight="500"
                    android:textSize="@dimen/mediumSize" />

                <TextView
                    android:id="@+id/dataId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gilroy_bold"
                    android:text="May 4, 2022"
                    android:textColor="@color/black"
                    android:textFontWeight="500"
                    android:textSize="15dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="top|left|center_vertical|center_horizontal|center|start">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gilroy_bold"
                    android:text="Account number"
                    android:textColor="@color/black"
                    android:textFontWeight="500"
                    android:textSize="@dimen/mediumSize" />

                <TextView
                    android:id="@+id/AccountId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gilroy_bold"
                    android:text="00000"
                    android:textColor="@color/black"
                    android:textFontWeight="500"
                    android:textSize="20dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="top|left|center_vertical|center_horizontal|center|start">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="5dp">

                <TextView
                    android:id="@+id/step1Id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gilroy_bold"
                    android:text="IFSC Code"
                    android:textColor="@color/black"
                    android:textFontWeight="500"
                    android:textSize="@dimen/mediumSize" />

                <TextView
                    android:id="@+id/IFSCId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gilroy_bold"
                    android:text="00000"
                    android:textColor="@color/black"
                    android:textFontWeight="500"
                    android:textSize="20dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="top|left|center_vertical|center_horizontal|center|start">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gilroy_bold"
                    android:text="Amount"
                    android:textColor="@color/black"
                    android:textFontWeight="500"
                    android:textSize="@dimen/mediumSize" />

                <TextView
                    android:id="@+id/AmountId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gilroy_bold"
                    android:text="00000"
                    android:textColor="@color/black"
                    android:textFontWeight="500"
                    android:textSize="20dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="top|left|center_vertical|center_horizontal|center|start">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gilroy_bold"
                    android:text="status"
                    android:textColor="@color/black"
                    android:textFontWeight="500"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/statusId"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gilroy_bold"
                    android:hint="Pending/Completed"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textFontWeight="500"
                    android:textSize="@dimen/mediumSize" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="#32ffffff"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/gilroy_bold"
                        android:text="MSG"
                        android:textColor="@color/black"
                        android:textFontWeight="500"
                        android:textSize="20dp" />

                    <EditText
                        android:id="@+id/statusMsg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/gilroy_bold"
                        android:hint="message about lead"
                        android:text="Just few more steps to complete the application."
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textFontWeight="500"
                        android:textSize="@dimen/smallSize" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/UpdateId"
                android:layout_width="230dp"
                android:layout_height="@dimen/buttonHeight"
                android:background="@drawable/bgxml4"
                android:gravity="center">

                <TextView
                    android:id="@+id/compltText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="UPDATE"
                    android:textColor="@color/blackColor"
                    android:textSize="@dimen/buttonText"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>